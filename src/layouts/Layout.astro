---
import DonateButton from '../components/DonateButton.astro';
import GithubButton from '../components/GithubButton.astro';
import Logo from '../components/Logo.astro';

export interface Props {
  title: string;
  coin: 'Bitcoin';
}

const { title, coin } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-white py-24 sm:py-36">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center mb-16">
          <h1 class="mt-2 text-2xl font-bold tracking-tight text-btc-color sm:text-4xl">
            <Logo />
            {coin} Wallet Requisites
          </h1>
        </div>

        <slot />
      </div>
      <div class="absolute bottom-8 right-8 flex gap-4">
        <GithubButton />
        <DonateButton />
      </div>
    </div>
  </body>
</html>
