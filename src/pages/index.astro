---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bitcoin Wallet Requisites" coin="Bitcoin">
  <form
    name="get-requisites-form"
    method="get"
    action="/requisites"
    class="flex flex-col gap-6 mx-auto w-full max-w-lg"
  >
    <div class="w-full">
      <label for="coin" class="block text-sm font-medium text-gray-700">Coin</label>
      <select
        id="coin"
        name="coin"
        value="Bitcoin"
        class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-btc-color focus:border-btc-color sm:text-sm rounded-md"
      >
        <option value="BTC">Bitcoin</option>
      </select>
    </div>

    <div class="w-full">
      <label for="address" class="block text-sm font-medium text-gray-700">Address</label>
      <div class="mt-1">
        <input
          type="text"
          name="address"
          id="address"
          required
          class="shadow-sm focus:ring-btc-color focus:border-btc-color block w-full sm:text-sm border-gray-300 rounded-md"
        />
      </div>
    </div>

    <button
      type="submit"
      class="w-64 inline-flex justify-center items-center mx-auto mt-4 px-6 py-2.5 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-btc-color hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-btc-color"
    >
      Get Wallet Requisites Page
    </button>
  </form>
</Layout>
